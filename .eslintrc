{
  "extends": [
    "eslint:recommended",
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true,
    "jquery": true
  },
  "rules": {
    "indent": ["error", 4],
    "quotes": ["error", "single"],
    "no-var": ["error"],
    "no-underscore-dangle": "off",
    "semi": ["error", "always"],
    "no-trailing-spaces": ["error"],
    "eol-last": ["error"],
    "yoda": ["error", "always"]
  }
}
